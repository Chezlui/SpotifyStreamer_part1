<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="es.quizit.spotifystreamer.PlayerActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coldplay"
        android:id="@+id/artistNameTxtVw"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ghost Stories"
        android:id="@+id/albumTxtVw"
        android:layout_below="@+id/artistNameTxtVw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/albumImgVw"
        android:layout_marginTop="22dp"
        android:src="@drawable/a86ea149077b22239f41e8b17f7261c475b084ee"
        android:layout_below="@+id/albumTxtVw"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A Sky Full of Stars"
        android:id="@+id/trackTxtVw"
        android:layout_below="@+id/albumImgVw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/previousButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="22dp"
        android:background="@android:drawable/ic_media_previous"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playButton"
        android:layout_alignBottom="@+id/previousButton"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/ic_media_play"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pauseButton"
        android:layout_alignBottom="@+id/previousButton"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/ic_media_pause"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nextButton"
        android:layout_alignBottom="@+id/playButton"
        android:layout_alignParentEnd="true"
        android:background="@android:drawable/ic_media_next"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_above="@+id/playButton"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:id="@+id/actualTimeTvw"
        android:layout_above="@+id/previousButton"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="9dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:25"
        android:id="@+id/trackTotalTimeTvw"
        android:layout_above="@+id/nextButton"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="9dp"/>

</RelativeLayout>
